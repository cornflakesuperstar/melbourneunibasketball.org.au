- if @page.class == NewsItem
  %h1
    = @page.title

.content
  - if @page.image?
    .page_image
      = link_to image_tag(@page.image_url(:standard)), @page.image_url
  - if @page.content
    = @page.content.html_safe
  - else
    = @page.synopsis

  - if @page.class == NewsItem
    %p.clear
      = render :partial => 'pages/facebook_comments'

  %p.clear
    .muted
      - if @page.class == NewsItem
        = @page.created_at.to_s(:month_day_year)
        - if @page.author?
          == - submitted by #{@page.author}
      - else
        This page was last updated
        - if @page.author?
          == by #{@page.author}
        == on #{@page.updated_at.to_s(:month_day_year)}
