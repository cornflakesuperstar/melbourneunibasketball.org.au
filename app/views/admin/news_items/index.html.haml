- model_class = NewsItem
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:author)
      %th= model_class.human_attribute_name(:synopsis)
      %th= model_class.human_attribute_name(:article)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @news_items.each do |news_item|
      %tr
        %td= link_to news_item.id, [:admin, news_item]
        %td= news_item.title
        %td= news_item.author
        %td= news_item.synopsis
        %td= news_item.article
        %td=l news_item.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_news_item_path(news_item), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), [:admin, news_item], :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_admin_news_item_path, :class => 'btn btn-primary'
