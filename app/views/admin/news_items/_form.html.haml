= form_for [:admin, @news_item] do |f|
  - if @news_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@news_item.errors.count, "error")} prohibited this news_item from being saved:"
      %ul
        - @news_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :synopsis
    = f.text_area :synopsis
  .field
    = f.label :article
    = f.text_area :article
  .actions
    = f.submit 'Save'
