- model_class = NewsItem
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @news_item.title
%p
  %strong= model_class.human_attribute_name(:author) + ':'
  %br
  = @news_item.author
%p
  %strong= model_class.human_attribute_name(:synopsis) + ':'
  %br
  = @news_item.synopsis
%p
  %strong= model_class.human_attribute_name(:article) + ':'
  %br
  = @news_item.article

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_news_items_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_news_item_path(@news_item), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), [:admin, @news_item], :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
