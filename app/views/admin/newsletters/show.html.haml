.page-header
  %h1=@newsletter.title

%p
  %strong author:
  %br
  = @newsletter.author

.form-actions
  = link_to "Back", admin_newsletters_path, :class => 'btn'
  = link_to "Edit", edit_admin_newsletter_path(@newsletter), :class => 'btn'
  /= link_to "Destroy", [:admin, @member], :method => "delete", :data => { :confirm => t('.confirm', :default => 'Are you sure?' }, :class => 'btn btn-danger'
