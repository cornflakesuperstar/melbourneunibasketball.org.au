= link_to "Create a News Item", new_admin_news_item_path, :class => 'btn btn-primary right', style: 'margin-top:30px'

- model_class = NewsItem
.page-header
  %h3 News Item Admin
%table.table.table-striped
  %thead
    %tr
      /%th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:author)
      %th= model_class.human_attribute_name(:synopsis)
      %th Created
      %th{width:100}=t '.actions', :default => t("helpers.actions")
  %tbody
    - @news_items.each do |page|
      %tr
        /%td= link_to page.id, [:admin, page]
        %td= link_to page.title, [:admin, page]
        %td= page.author
        %td= truncate(page.synopsis, length: 50)
        %td= page.created_at.to_s(:abbr_month_day_year)
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_page_path(page), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), [:admin, page], :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
